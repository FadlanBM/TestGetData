<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginStaffActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input Table Code"
                android:inputType="text"
                android:id="@+id/lb_code_staff"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            app:cornerRadius="10dp"
            android:layout_marginHorizontal="20dp"
            android:text="Submit"
            android:backgroundTint="@color/primary_400"
            android:id="@+id/btn_submit_staff"
            />
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:text="Login As Staff"
    android:layout_alignParentBottom="true"
    app:cornerRadius="10dp"
    android:backgroundTint="@color/primary_400"
    android:layout_marginHorizontal="20dp"
    android:id="@+id/btn_asStaff_staff"/>
</RelativeLayout>